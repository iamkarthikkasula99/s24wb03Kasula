extends layout
 
block content
  h1= title
 
  div.container-fluid
    div.row
      -
        let results = [
          { cap_type: 'basketball cap', cap_size: 'Medium', cap_price: 100 },
          { cap_type: 'flat cap', cap_size: 'Large', cap_price: 200 },
          { cap_type: 'cricket cap', cap_size: 'Small', cap_price: 300 }
        ]
       
      each cap,index in results
        .col-sm-2
        div.col-sm-2(onclick=`buy(${index})`)
       
          p cap Type: #{cap.cap_type}
          p Size: #{cap.cap_size}
          p Price: $#{cap.cap_price.toFixed(2)}
 
  a(href="/") Back to index
 
    script.
        function buy(index) {
            alert(`You purchased item ${index}`);
        }
has context menu